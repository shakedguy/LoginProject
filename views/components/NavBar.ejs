<!-- Navbar -->
<nav class="navbar navbar-dark bg-gradient">
	<!-- Container wrapper -->
	<div class="container-fluid">
		<!-- Toggle button -->
		<div class="d-flex">
			<button
				class="navbar-toggler menu-btn add-tooltip"
				type="button"
				data-bs-toggle="offcanvas"
				data-bs-target="#offcanvasWithBothOptions"
				aria-expanded="false"
				aria-label="Toggle navigation"
				id="btn-menu"
				aria-controls="offcanvasWithBothOptions"
				title="Menu"
			>
				<i class="fas fa-bars"></i>
			</button>
			<a
				class="link-light ms-2 add-tooltip"
				href="/"
				id="nav-btn-home"
				role="button"
				aria-expanded="false"
				title="Home"
			>
				<i class="fas fa-home"></i>
			</a>
		</div>
		<h2 id="main-title" style="font-weight: 600"><%- title %></h2>
		<!-- Right elements -->
		<div class="d-flex align-items-center">
			<!-- Avatar -->
			<a
				class="nav-link link-light active text-decoration-none d-flex add-tooltip"
				aria-current="page"
				href="/profile"
				title="Profile"
			>
				<%if(isLogedIn && userData && userData.picture){%>
				<img
					src="<%-userData.picture%>"
					class="rounded-circle"
					alt="user photo"
					width="24"
					height="24"
					loading="lazy"
				/>
				<%}else{%>
				<span class="material-icons add-tooltip" title="Profile">account_circle</span>
				<%}%>
			</a>

			<%if (isLogedIn) { %>

			<a
				class="nav-link link-light active text-decoration-none d-flex add-tooltip"
				type="button"
				id="btn-logout-toast"
				aria-current="page"
				title="logout"
			>
				<span class="material-icons">logout</span>
			</a>

			<% }else{ %>

			<a
				class="nav-link link-light active text-decoration-none d-flex add-tooltip"
				id="nav-link"
				aria-current="page"
				href="/login"
				title="Login"
			>
				<span class="material-icons">login</span>
			</a>
			<% } %>
			<button type="button" class="btn text-light menu-btn me-1 add-tooltip" id="btn-dark-mode" title="Dark Mode">
				<i class="bi bi-moon"></i>
			</button>
		</div>
		<!-- Right elements -->
	</div>
	<!-- Container wrapper -->
</nav>

<%- include('./Toast'); -%>
<!-- Navbar -->

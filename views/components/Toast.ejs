<%if (isLogedIn) { %>
<div class="position-absolute top-0 end-0 p-3 mt-5 me-1" style="z-index: 1001">
	<div id="logout-toast" class="toast bg-gradient" role="alert" aria-live="assertive" aria-atomic="true">
		<div class="toast-header d-flex flex-row justify-content-between bg-gradient" id="toast-header">
			<i class="fas fa-exclamation-triangle text-warning"></i>
			<button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
		</div>
		<div class="toast-body bg-gradient">
			<p>Are you sure you want to log out?</p>
			<div class="d-flex flex-row justify-content-between">
				<button type="button" id="btn-cancel" class="btn btn-toast border-0" data-bs-dismiss="toast" aria-label="Close">
					Cancel
				</button>
				<button class="btn btn-toast border-0" id="btn-logout">Yes</button>
			</div>
		</div>
	</div>
</div>
<%} %>
